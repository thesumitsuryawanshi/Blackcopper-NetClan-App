<?xml version="1.0" encoding="utf-8"?>
<resources>


    //tablayout
    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#000</item>

    </style>

    <style name="TabTextAppearance">15dp</style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:contentInsetStart">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="FragmentTheme" parent="AppTheme.NoActionBar">
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_round_spinner</item>
    </style>

</resources>